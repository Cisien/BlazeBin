@if(State.IsServerSideRender) {
    <div style="width: 100vw;height: calc(100vh - 80px);background-color: rgb(30, 30, 30);color: #d4d4d4;overflow: auto;padding: 10px;">
        @State.ActiveFile?.Data
    </div>
}

<MonacoEditor id="editor" CssClass="editor"
              ConstructionOptions="EditorConstructionOptions"
              OnDidChangeModel="ModelChanged"
              OnDidBlurEditorText="EditorTextBlur"
              OnDidChangeModelContent="ModelContentChanged" 
              OnDidInit="EditorInitialized" />