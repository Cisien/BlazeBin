@inherits LayoutComponentBase

<section class="container@(clientSideRendered ? "" : " blur")">
    @Body
</section>
<Footer />
@if (!clientSideRendered)
{
    <div class="loading-modal">
            <div class="loader"></div>
            <div class="basic-link-container shown">
                <span>Too slow?</span><br /><span>Try the <a href="@(uploadName == null ? "/basic" : $"/basic/viewer/{uploadName}/0")">basic</a> version of BlazeBin</span>
            </div>
    </div>
}

@code {
    bool clientSideRendered = false;
    string? uploadName;

    protected override void OnInitialized()
    {
        string? uploadName;
        var routeData = (this.Body?.Target as RouteView)?.RouteData;
        if(routeData?.RouteValues.TryGetValue("uploadName", out var parameterValue) ?? false)
        {
            uploadName = parameterValue.ToString();
        }
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            clientSideRendered = true;
            StateHasChanged();
        }

        base.OnAfterRender(firstRender);
    }
}